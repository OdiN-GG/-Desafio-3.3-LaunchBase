{% extends "layout.njk" %}

{% block head %}
    <title> Sobre - Wallison Silva</title>
{% endblock %}

{% block content %}

    <div class="apre">

        <img src="{{about.avatar_url}}" alt="Imagagem de {{about.name}}">
        <h1>{{about.name}}</h1>
        <h2>{{about.role}}</h2>
        <p>{{about.description}}</p>

    </div>

    <div id="link-footer" class="links">

        {% for link in about.links %}
        <a href="{{link.url}}" target="_blanck">{{link.name}}</a>
        {% endfor %}
        
    </div>
    
{% endblock %}

    
</body>
</html>